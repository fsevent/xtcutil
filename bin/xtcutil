#!/usr/bin/ruby

require 'pp'

def main_help(argv)
  puts <<'End'
usage:
  xtcutil help
  xtcutil json file.xtc
  xtcutil show file.xtc
  xtcutil pdf file.xtc
  xtcutil png file.xtc
End
end

def main(argv)
  if argv.empty?
    argv.unshift 'help'
  end
  subcommand = argv.shift
  case subcommand
  when 'help'
    main_help(argv)
  when 'json'
    require 'xtcutil/cmd_json'; main_json(argv)
  when 'graph'
    require 'xtcutil/cmd_graph'; main_graph(argv)
  when 'show'
    require 'xtcutil/cmd_show'; main_show(argv)
  when 'pdf'
    require 'xtcutil/cmd_pdf'; main_pdf(argv)
  when 'png'
    require 'xtcutil/cmd_png'; main_png(argv)
  else
    $stderr.print "unexpected subcommand: #{subcommand}"
    exit false
  end
end

main ARGV
